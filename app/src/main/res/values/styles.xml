<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:statusBarColor">@color/primaryVariant</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
    </style>

    <!--TextView Styles-->
    <style name="TextView.Base" parent="android:Widget.TextView" />

    <!-- White -->

    <style name="TextView.White" parent="TextView.Base">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextView.White.Small.Regular" parent="TextView.White">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextView.White.XSmall.Regular" parent="TextView.White">
        <item name="android:textSize">@dimen/xsmall_text_size</item>
    </style>

    <style name="TextView.White.Medium.Regular" parent="TextView.White">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="TextView.White.Medium.Bold" parent="TextView.White">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.White.XMedium.Bold" parent="TextView.White">
        <item name="android:textSize">@dimen/xmedium_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.White.Large.Bold" parent="TextView.White">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.White.XMedium.Regular" parent="TextView.White">
        <item name="android:textSize">@dimen/xmedium_text_size</item>
    </style>

    <style name="TextView.White.X10Large.Regular" parent="TextView.White">
        <item name="android:textSize">@dimen/x10_large_text_size</item>
    </style>


    <!-- Black -->

    <style name="TextView.Black" parent="TextView.Base">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Black.Small.Regular" parent="TextView.Black">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextView.Black.XSmall.Regular" parent="TextView.Black">
        <item name="android:textSize">@dimen/xsmall_text_size</item>
    </style>

    <style name="TextView.Black.Medium.Regular" parent="TextView.Black">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="TextView.Black.XMedium.Regular" parent="TextView.Black">
        <item name="android:textSize">@dimen/xmedium_text_size</item>
    </style>

    <style name="TextView.Black.X10Large.Regular" parent="TextView.Black">
        <item name="android:textSize">@dimen/x10_large_text_size</item>
    </style>


    <!-- Grey -->

    <style name="TextView.Grey" parent="TextView.Base">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextView.Grey.Small.Regular" parent="TextView.Grey">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="TextView.Grey.XSmall.Regular" parent="TextView.Grey">
        <item name="android:textSize">@dimen/xsmall_text_size</item>
    </style>

    <style name="TextView.Grey.XSmall.Bold" parent="TextView.Grey">
        <item name="android:textSize">@dimen/xsmall_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Grey.Medium.Regular" parent="TextView.Grey">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>


    <style name="TextView.Grey.X10Large.Regular" parent="TextView.Grey">
        <item name="android:textSize">@dimen/x10_large_text_size</item>
    </style>

</resources>
